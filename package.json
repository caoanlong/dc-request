{
  "name": "dc-request",
  "version": "0.1.1",
  "description": "A request client via electron",
  "private": true,
  "author": "Aaron",
  "main": "public/electron.js",
  "scripts": {
    "start": "craco start",
    "build": "craco build",
    "test": "craco test",
    "electron-dev": "concurrently -s first -k \"BROWSER=none yarn start\" \"wait-on http://localhost:3000 && electron .\"",
    "build:mac": "craco build && electron-builder --mac --x64",
    "build:win": "craco build && electron-builder --win --x64",
    "build:all": "craco build && electron-builder --mac --win --x64",
    "electron-b": "craco build && electron-builder",
    "electron-pack": "electron-builder build --mac --win --linux deb --x64 --arm64 --c.extraMetadata.main=build/electron.js -c.mac.identity=null"
  },
  "build": {
    "appId": "com.dc.request",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "mac": {
      "icon": "public/icon.png"
    },
    "win": {
      "icon": "public/icon.png"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "homepage": "./",
  "dependencies": {
    "@fingerprintjs/fingerprintjs": "^3.1.2",
    "axios": "^0.21.1",
    "electron-is-dev": "^2.0.0",
    "electron-store": "^8.0.0",
    "jsoneditor": "^9.4.1",
    "jsrsasign": "^10.2.0",
    "light-toast": "^0.3.3",
    "qs": "^6.10.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3",
    "styled-components": "^5.3.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@craco/craco": "^6.1.2",
    "concurrently": "^6.2.0",
    "electron": "^13.0.1",
    "electron-builder": "^22.10.5",
    "wait-on": "^5.3.0"
  }
}
